<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:layout_marginTop="@dimen/value_16dp"
        android:layout_marginStart="@dimen/value_16dp"
        android:id="@+id/iv_notify_app_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/videocam_24" />

    <TextView
        android:id="@+id/tv_notify_tittle_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_notify_app_icon"
        android:layout_marginStart="@dimen/value_8dp"
        android:layout_toStartOf="@+id/iv_notify_main_iv"
        android:layout_toEndOf="@+id/iv_notify_app_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="YouTube 10:00 PM" />



    <ImageView
        android:id="@+id/iv_notify_tiitle_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_notify_tittle_id"
        android:layout_alignStart="@+id/iv_notify_app_icon"
        android:layout_marginTop="@dimen/value_8dp"
        android:src="@drawable/ic_baseline_brightness_1_24" />

    <TextView
        android:id="@+id/tv_notify_tittle_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_notify_app_icon"
        android:layout_alignBottom="@+id/iv_notify_tiitle_two"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/value_8dp"
        android:layout_marginBottom="-4dp"
        android:layout_toStartOf="@+id/iv_notify_main_iv"
        android:layout_toEndOf="@+id/iv_notify_tiitle_two"
        android:text="Grant Cardone" />

    <TextView
        android:id="@+id/tv_notify_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_notify_tittle_two"
        android:layout_alignStart="@+id/tv_notify_tittle_two"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="@dimen/value_8dp"
        android:layout_toStartOf="@+id/iv_notify_main_iv"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/real_estate_training_live_at" />

    <ImageView
        android:id="@+id/iv_notify_main_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/new_img" />
</RelativeLayout>