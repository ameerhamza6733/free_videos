<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_notify_app_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/value_16dp"
        android:layout_marginTop="@dimen/value_16dp"
        android:src="@drawable/videocam_24" />

    <TextView
        android:id="@+id/tv_notify_tittle_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_notify_app_icon"
        android:layout_marginStart="@dimen/value_8dp"
        android:layout_toStartOf="@+id/iv_notify_main_iv"
        android:layout_toEndOf="@+id/iv_notify_app_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/text_siz_14"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/iv_notify_tiitle_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_notify_tittle_id"
        android:layout_alignStart="@+id/iv_notify_app_icon"
        android:layout_marginTop="@dimen/value_8dp"
        android:src="@drawable/ic_baseline_brightness_1_24" />

    <TextView
        android:id="@+id/tv_notify_tittle_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_notify_app_icon"
        android:layout_alignBottom="@+id/iv_notify_tiitle_two"
        android:layout_marginStart="@dimen/value_8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/value_8dp"
        android:layout_toStartOf="@+id/iv_notify_main_iv"
        android:layout_toEndOf="@+id/iv_notify_tiitle_two"
        android:fontFamily="@font/comfortaa_semibold"
        android:textColor="@color/black"
        android:textSize="@dimen/text_siz_12" />

    <TextView
        android:id="@+id/tv_notify_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_notify_tittle_two"
        android:layout_alignStart="@+id/tv_notify_tittle_two"
        android:layout_marginTop="@dimen/value_4dp"
        android:layout_marginEnd="@dimen/value_8dp"
        android:layout_toStartOf="@+id/iv_notify_main_iv"
        android:ellipsize="end"
        android:fontFamily="@font/comfortaa_regular"
        android:maxLines="1"
        android:text="@string/real_estate_training_live_at"
        android:textSize="@dimen/text_siz_12" />

    <ImageView
        android:id="@+id/iv_notify_main_iv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/value_70dp"
        android:layout_above="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_notify_body"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/value_6dp"
        android:gravity="center" />
</RelativeLayout>