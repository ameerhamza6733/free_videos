<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/value_2dp">

    <ImageView
        android:id="@+id/rec_view_img_view_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/ic_baseline_videocam_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btn_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_load_more"
        android:fontFamily="@font/comfortaa_semibold"
        android:gravity="center"
        android:layout_margin="@dimen/value_8dp"
        android:paddingLeft="@dimen/value_4dp"
        android:paddingTop="@dimen/value_10dp"
        android:paddingRight="@dimen/value_4dp"
        android:paddingBottom="@dimen/value_10dp"
        android:text="@string/load_more_videos"
        android:textColor="@color/black"
        android:textSize="@dimen/text_siz_12"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rec_view_img_view_id"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>